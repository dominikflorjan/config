# I3 config file
set $mod Mod4
set $alt Mod1 

# Font
font pango:DejaVu Sans Mono Nerd Font 11

focus_follows_mouse no

for_window [class=".*"] border pixel 3
client.focused #00C1FF #00C1FF #000088 #00C1FF

smart_gaps on
gaps inner 10
gaps outer 10
hide_edge_borders smart_no_gaps

# Set monitors properly 
# exec --no-startup-id xrandr --output DisplayPort-0 --primary
exec_always --no-startup-id xrandr --output DisplayPort-2 --left-of DisplayPort-0
exec_always --no-startup-id xrandr --output DisplayPort-1 --right-of DisplayPort-0
# exec --no-startup-id xrandr --output HDMI-A-0 --off

# Map caps to escape
exec_always setxkbmap -layout pl -option caps:escape         
